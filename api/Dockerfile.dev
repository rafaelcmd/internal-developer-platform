# ---- Build stage ----
FROM golang:1.23-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o internal-developer-platform-api ./cmd/server

RUN chmod +x internal-developer-platform-api

RUN mkdir -p /app/logs && chown -R 1000:1000 /app/logs

# ---- Runtime stage ----
FROM alpine:3.19

RUN apk add --no-cache ca-certificates curl

WORKDIR /app

RUN addgroup -S appgroup && adduser -S appuser -G appgroup

RUN mkdir -p /app/logs && chown -R appuser:appgroup /app/logs

COPY --from=builder /app/internal-developer-platform-api .
COPY --from=builder /app/docs ./docs

RUN chown -R appuser:appgroup ./docs

USER appuser

ENTRYPOINT ["/app/internal-developer-platform-api"]